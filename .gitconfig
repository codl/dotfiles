[user]
	name = codl
	email = codl@codl.fr
	signingkey = BC5A4983

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[alias]
	logg = "!. ~/.githelpers && pretty_git_log"
	lg = !git logg -10
	lga = !git lg --all
	loga = !git logg --all
	pullff = pull --ff-only
	next = !git status --porcelain=v1 | grep -E \"^(UU|AA)\" | cut -d \" \" -f 2- | head -n 1
	feta = fetch --all --tags --prune

[push]
	default = matching

[color]
	ui = auto

[core]
	excludesfile = /home/codl/.gitignore
[commit]
	gpgSign = true
[rebase]
	autoStash = true

[merge]
	ff = only
	conflictStyle = diff3

[init]
	templateDir = /home/codl/.config/git-template
